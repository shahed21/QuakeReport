<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/earthquake_container_layout"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/tan_background"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/mag_text_view"
        android:layout_width="@dimen/eq_list_item_mag_width"
        android:layout_height="@dimen/eq_list_item_height"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        tools:text="mag"
        android:textColor="@color/colorPrimary"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/eq_list_item_height"
        android:orientation="vertical">
        <TextView
            android:id="@+id/near_string_text_view"
            android:layout_width="@dimen/eq_list_item_place_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            tools:text="near string"
            />
        <TextView
            android:id="@+id/place_text_view"
            android:layout_width="@dimen/eq_list_item_place_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size"
            tools:text="place"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/eq_list_item_height"
        android:orientation="vertical">
        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="@dimen/eq_list_item_date_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            tools:text="date"
            />
        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="@dimen/eq_list_item_date_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            tools:text="time"
            />

    </LinearLayout>
</LinearLayout>